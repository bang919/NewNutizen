<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/tv_writter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/colorGreen"
            app:layout_constraintTop_toBottomOf="@id/vod_title" />

        <TextView
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#6F6F6F"
            app:layout_constraintBottom_toBottomOf="@id/tv_writter"
            app:layout_constraintLeft_toRightOf="@+id/tv_writter" />

        <ImageView
            android:id="@+id/iv_show_detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@mipmap/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/tv_writter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_writter" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:gravity="bottom"
            android:text=""
            android:textColor="#FFF"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_writter" />
    </android.support.constraint.ConstraintLayout>
</merge>

