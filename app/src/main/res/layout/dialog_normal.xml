<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="275dp"
    android:layout_height="145dp"
    android:layout_gravity="center"
    android:background="#FF232323">


    <TextView
        android:id="@+id/live_content"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintBottom_toTopOf="@+id/tv_no" />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/refuse"
        android:textColor="#86B73B"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_yes" />

    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/accept"
        android:textColor="#86B73B"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_no"
        app:layout_constraintLeft_toRightOf="@+id/tv_no"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>